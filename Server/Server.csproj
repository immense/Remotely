    <TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
    <DockerTargetOS>Windows</DockerTargetOS>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
